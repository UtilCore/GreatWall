@page
@model IdentityResourceDto
@*标题*@
<page-header title="编辑身份资源" [autoBreadcrumb]="false"></page-header>
@*表单*@
<util-card show-border="false">
    <util-form id="form" gutter="16">
        <util-row gutter="42">
            <util-column span="18">
                <util-textbox for="Uri" is-flex="true" label-span="4" span="20"></util-textbox>
            </util-column>
            <util-column span="6">
                <util-switch for="Enabled" is-flex="true" show-label="true"></util-switch>
            </util-column>
        </util-row>
        <util-textbox for="Name" is-flex="true" label-span="3" span="21"></util-textbox>
        <util-select for="Claims" url="/api/claim/all" label-span="3" span="21" is-flex="true" tags="true"></util-select>
        <util-row >
            <util-column span="6">
                <util-switch for="Required" label-span="12" is-flex="true"></util-switch>
            </util-column>
            <util-column span="6">
                <util-switch for="Emphasize" show-label="true" is-flex="true"></util-switch>
            </util-column>
            <util-column span="6">
                <util-switch for="ShowInDiscoveryDocument" show-label="true" is-flex="true"></util-switch>
            </util-column>
            <util-column span="6">
                <util-textbox for="SortId" is-flex="true" show-label="true"></util-textbox>
            </util-column>
        </util-row>
        <util-textarea for="Remark" label-span="3" span="21"></util-textarea>
        <util-form-item justify="End">
            <util-form-control class="w-auto">
                <util-button class="mr-sm" text="取消" on-click="close()"></util-button>
                <util-button id="btnSubmit" validate-form="true" color="Primary" on-click="submit(form,btnSubmit)"></util-button>
            </util-form-control>
        </util-form-item>
    </util-form>
</util-card>